<h1>Recipe</h1>


<%= @recipe.Name %> <br>
Skill:
<%= javascript_tag do -%>
  craftName(<%= @recipe.Skill %>);
<% end %><br>
Points:
<%= javascript_tag do -%>
  craftPoints(<%= @recipe.Points %>, <%= @recipe.Value %>);
<% end %>
 DC:
<%= javascript_tag do -%>
  craftDC(<%= @recipe.DC %>, <%= @recipe.Value %>)
<% end %>
<br>


<h1>------Inputs-----</h1>
<% @inputs.each do |input| %>
    <%= link_to "#{input.Name} #{input.Qty}", input_path(input.Name) %><br>
<% end %>

<h1>------Outputs-----</h1>
<% @outputs.each do |output| %>
    <%= "#{output.Name} #{output.Qty}"%><br>
<% end %>

<h1>------Feats-----</h1>
<% @feats.each do |feat| %>
    <%= "#{feat.Feat}"%><br>
<% end %>

<h1>------Skills-----</h1>
<% @skills.each do |skill| %>
    <%= "#{skill.Skill} #{skill.Rank}"%><br>
<% end %>

<h1>------Classes (Level:
<%= javascript_tag do -%>
  classLevel(<%= @recipe.Class_Level %>);
<% end %>
)-----</h1>
<%= javascript_tag do -%>
  listClass(<%= @recipe.Class %>);
<% end %>

<h1>-----Settings--------</h1>
<%= javascript_tag do -%>
  listSettings(<%= @recipe.Settings %>);
<% end %>

<h1>------Races-----</h1>
<%= javascript_tag do -%>
  listRace(<%= @recipe.SubRace %>);
<% end %>
