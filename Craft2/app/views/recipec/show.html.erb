<h1>Recipe</h1>


<%= @recipe.Name %> <br>
Skill:
<script>
  craftName(<%= @recipe.Skill %>);
</script>

DC: <%= @recipe.DC %><br>
<h1>------Inputs-----</h1>
<% @inputs.each do |input| %>
    <%= link_to "#{input.Name} #{input.Qty}", input_path(input.Name) %><br>
<% end %>

<h1>------Outputs-----</h1>
<% @outputs.each do |output| %>
    <%= "#{output.Name} #{output.Qty}"%><br>
<% end %>

<h1>------Feats-----</h1>
<% @feats.each do |feat| %>
    <%= "#{feat.Feat}"%><br>
<% end %>

<h1>------Skills-----</h1>
<% @skills.each do |skill| %>
    <%= "#{skill.Skill} #{skill.Rank}"%><br>
<% end %>
